<Page
    x:Class="ytdl.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ytdl.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Black">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/Img/loginbg.png" Opacity="0.5"/>
        </Grid.Background>
        <Grid Height="380" Width="280">
            <Pivot Height="340" Width="280" Background="#CCFFFFFF" x:Name="myPivot" Margin="0 -40 0 0">
                <PivotItem>
                    <Grid>
                        <Image Source="ms-appx:///Assets/Img/icon.png" Width="80" VerticalAlignment="Top"/>
                        <RichTextBlock FlowDirection="RightToLeft"
                                       IsTextSelectionEnabled="False"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="{StaticResource Mitra}">
                            <Paragraph>
                                <Run>به برنامه</Run>
                            </Paragraph>
                            <Paragraph FontWeight="Bold" FontSize="22">
                                <Run>یوتیوب دانلودر</Run>
                            </Paragraph>
                            <Paragraph>
                                <Run>خوش امدید</Run>
                            </Paragraph>
                        </RichTextBlock>
                    </Grid>
                </PivotItem>
                <PivotItem>
                    <TextBlock FlowDirection="RightToLeft" TextWrapping="Wrap" TextAlignment="Center"
                               FontSize="18" VerticalAlignment="Center" FontFamily="{StaticResource Mitra}"
                               LineHeight="35" Text="این برنامه لینک دانلود (بدون فیلتر) از ویدیو‌ها برای شما فراهم می‌کند"/>
                </PivotItem>
                <PivotItem>
                    <RichTextBlock FlowDirection="RightToLeft"
                                   Margin="0 -20 0 0 "
                                       IsTextSelectionEnabled="False"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="{StaticResource Mitra}">
                        <Paragraph>
                            <Run>می‌توانید از هریک از طرح‌های زیر استفاده کنید</Run>
                        </Paragraph>
                        <Paragraph FontWeight="Bold" FontSize="22" Margin="44 18">
                            <Run Foreground="#FF8F0000" >طرح هفتگی 1500 تومان</Run>
                        </Paragraph>
                        <Paragraph FontWeight="Bold" FontSize="22" Margin="44 18">
                            <Run Foreground="#FFC10000">طرح ماهیانه 3500 تومان</Run>
                        </Paragraph>
                        <Paragraph>
                            <Run>و روزانه یک دانلود برای افرادی که حساب مجانی دارند</Run>
                        </Paragraph>
                    </RichTextBlock>
                </PivotItem>
                <PivotItem>
                    <Grid>
                        <TextBlock Text="ورود" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" FontFamily="{StaticResource Mitra}" 
                   FontSize="30" Margin="0,-148,0,0" Foreground="Black" />
                        <Button Background="#DF4A32" HorizontalAlignment="Center" Margin="0,8,0,0" 
                        RequestedTheme="Dark" Width="186" Click="Button_Click">
                            <StackPanel Orientation="Horizontal" Padding="4" Background="#7FDF4A32" >
                                <Image Source="ms-appx:///Assets/Img/g.png" Height="32" Margin="0,0,19,0" />
                                <TextBlock Text="Google Account" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </PivotItem>
            </Pivot>
            <StackPanel Orientation="Horizontal" Background="#eee"  VerticalAlignment="Bottom">
                <AppBarButton Icon="Back" Background="#eee" Width="140" Height="50" HorizontalAlignment="Left" Click="AppBarButton_Click_1"/>
                <AppBarButton Icon="Forward" Background="#eee" Width="140" Height="50" VerticalAlignment="Bottom" Click="AppBarButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
